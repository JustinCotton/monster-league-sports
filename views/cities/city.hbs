<div class="profile">
    <img src="{{city.cityPhoto}}" height="200px" class="citySnapshot">
    <h2>{{city.cityName}}</h2>
    <h3 style="font-style: italic">{{city.citySlogan}}</h3>
    
    <h3>Population: {{city.cityStats.population}}</h3>
    <h3>Terrain: {{city.cityStats.terrain}}</h3>
    <h3>Average Temperature: {{city.cityStats.averageTemp}}</h3>
    <h3>Daily Hours of Darkness: {{city.cityStats.dailyHoursOfDarkness}}</h3>
    <h3>Local Delicacy: {{city.cityStats.localDelicacy}}</h3>
    <h3>Local Brewery: {{city.cityStats.localBrewery}}</h3>
    <h3>Local Attraction: {{city.cityStats.localAttraction}}</h3>
    <h3>Players:</h3>
    {{#each players}}
        <li>
            <a href="/players/{{_id}}">
            <img src="{{playerPhoto}}" height="150px"><br>
            {{playerName}}
            </a>
        </li>
    {{/each}}
    <br>
    <form method="POST" action="/cities/{{city._id}}?_method=DELETE">
        <input type="submit" value="Destroy City" class="destroy"/>
    </form>

    <form method="POST" action="/cities/{{city._id}}?_method=PUT">
        <input type="text" name="cityName" value="{{city.cityName}}" placeholder="Name" />
        <input type="text" name="cityPhoto" value="{{city.cityPhoto}}" placeholder="Photo URL" />
        <input type="text" name="citySlogan" value="{{city.citySlogan}}" placeholder="Slogan" />
        <input type="text" name="cityStats.population" value="{{city.cityStats.population}}" placeholder="Population" />
        <input type="text" name="cityStats.terrain" value="{{city.cityStats.terrain}}" placeholder="Terrain" />
        <input type="text" name="cityStats.averageTemp" value="{{city.cityStats.averageTemp}}" placeholder="Average Temperature" />
        <input type="text" name="cityStats.dailyHoursOfDarkness" value="{{city.cityStats.dailyHoursOfDarkness}}" placeholder="Daily Hours of Darkness" />
        <input type="text" name="cityStats.localDelicacy" value="{{city.cityStats.localDelicacy}}" placeholder="Local Delicacy" />
        <input type="text" name="cityStats.localBrewery" value="{{city.cityStats.localBrewery}}" placeholder="Local Brewery" />
        <input type="text" name="cityStats.localAttraction" value="{{city.cityStats.localAttraction}}" placeholder="Local Attraction" /><br>
        <input type="submit" value="Mutate City" class="mutate"/>
    </form>

</div>